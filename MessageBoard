        }

        body {
            margin: 0; padding: 40px 20px;
            font-family: "Libre Baskerville", "Times New Roman", serif;
            background: var(--paper-bg);
            color: var(--ink);
            display: flex; flex-direction: column; align-items: center;
        }

        .back-home {
            position: fixed; top: 20px; left: 20px;
            text-decoration: none; color: var(--accent);
            font-weight: bold; font-size: 0.9rem;
            border-bottom: 1px solid transparent;
            transition: 0.3s;
        }
        .back-home:hover { border-bottom: 1px solid var(--accent); }

        header { text-align: center; margin-bottom: 40px; border-bottom: 1px double var(--paper-border); padding-bottom: 20px; width: 100%; max-width: 800px; }
        
        .main-content { width: 100%; max-width: 600px; }

        /* 表单样式 */
        .message-form {
            background: #fff;
            padding: 25px;
            border: 1px solid var(--paper-border);
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
            margin-bottom: 50px;
        }
        .message-form h3 { margin-top: 0; color: var(--accent); font-style: italic; }
        
        input, textarea {
            width: 100%; padding: 12px; margin-bottom: 15px;
            border: 1px solid var(--paper-border);
            background: #fdfdfd;
            font-family: inherit; box-sizing: border-box;
        }
        
        button {
            background: var(--accent); color: white;
            border: none; padding: 12px 25px;
            cursor: pointer; font-family: inherit; font-weight: bold;
            transition: 0.3s; width: 100%;
        }
        button:hover { background: #6d5234; }

        /* 留言列表样式 */
        .messages-list { width: 100%; }
        .message-item {
            padding: 20px 0;
            border-bottom: 1px dashed var(--paper-border);
            animation: fadeIn 0.5s ease;
        }
        .msg-meta { font-size: 0.85rem; color: var(--accent); margin-bottom: 8px; font-weight: bold; }
        .msg-time { font-weight: normal; color: var(--ink-soft); font-style: italic; margin-left: 10px; }
        .msg-text { line-height: 1.6; font-size: 1rem; white-space: pre-wrap; }

        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
