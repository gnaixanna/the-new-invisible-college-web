<body>

    <a href="index.html" class="back-home">← Return to Genealogy</a>

    <header>
        <div style="font-size: 2rem; font-weight: 600;">Correspondence & Notes</div>
        <div style="font-size: 0.8rem; letter-spacing: 3px; color: var(--ink-soft); margin-top: 5px;">THE GUESTBOOK OF THE COLLEGE</div>
    </header>

    <div class="main-content">
        <div class="message-form">
            <h3>Leave a Note</h3>
            <form id="msgForm">
                <input type="text" id="userName" placeholder="Your Name (Scientist / Explorer)" required>
                <textarea id="messageText" rows="4" placeholder="Share your thoughts on physics or this genealogy..." required></textarea>
                <button type="submit" id="submitBtn">Seal and Post</button>
            </form>
        </div>

        <div class="messages-list" id="messagesDisplay">
            <p style="text-align: center; color: var(--ink-soft);">Loading records from the archives...</p>
        </div>
    </div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/12.9.0/firebase-app.js";
        import { getFirestore, collection, addDoc, serverTimestamp, query, orderBy, onSnapshot } 
               from "https://www.gstatic.com/firebasejs/12.9.0/firebase-firestore.js";

        // 你的配置
        const firebaseConfig = {
            apiKey: "AIzaSyCHJhvfRwjY5vUC8RU1-OZDuQg-E484y0E",
            authDomain: "the-new-invisible-college.firebaseapp.com",
            projectId: "the-new-invisible-college",
            storageBucket: "the-new-invisible-college.firebasestorage.app",
            messagingSenderId: "666232085063",
            appId: "1:666232085063:web:7327bd027e95524e44af62",
            measurementId: "G-2XE0WKMHK0"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const colRef = collection(db, "messages");

        // 提交留言
        const msgForm = document.getElementById('msgForm');
        msgForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const btn = document.getElementById('submitBtn');
            btn.disabled = true;
            btn.innerText = "Posting...";

            try {
                await addDoc(colRef, {
                    name: document.getElementById('userName').value,
                    text: document.getElementById('messageText').value,
                    timestamp: serverTimestamp()
                });
                msgForm.reset();
            } catch (err) {
                alert("Failed to post: " + err.message);
            } finally {
                btn.disabled = false;
                btn.innerText = "Seal and Post";
            }
        });

        // 实时获取留言
        const q = query(colRef, orderBy('timestamp', 'desc'));
        onSnapshot(q, (snapshot) => {
            const display = document.getElementById('messagesDisplay');
            display.innerHTML = ""; // 清空加载提示
            
            snapshot.docs.forEach(doc => {
                const data = doc.data();
                const date = data.timestamp ? data.timestamp.toDate().toLocaleString() : "Just now";
                
                const html = `
                    <div class="message-item">
                        <div class="msg-meta">${data.name}<span class="msg-time">${date}</span></div>
                        <div class="msg-text">${data.text}</div>
                    </div>
                `;
                display.innerHTML += html;
            });

            if (snapshot.empty) {
                display.innerHTML = '<p style="text-align: center; color: var(--ink-soft);">No records found yet. Be the first to write.</p>';
            }
        });
    </script>
</body>
